
 \ProvidesPackage{lib/background_images}
 \usepackage[pages=all]{background}
\usepackage{fancyhdr}

\newcommand{\oddbackgroundimg}{images/bg_odd.jpg}
\newcommand{\evenbackgroundimg}{images/bg_even.jpg}

\pagestyle{fancy}

\backgroundsetup{
	scale=1,
	opacity=1.0,
	angle=0,
	color=black,
	contents={%
		\ifodd\value{page}
			\includegraphics[width=\paperwidth,height=\paperheight]{\oddbackgroundimg}
			\else
			\includegraphics[width=\paperwidth,height=\paperheight]{\evenbackgroundimg}
		\fi
		}
}